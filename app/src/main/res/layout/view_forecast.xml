<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="forecastViewModel"
            type="ua.in.khol.oleh.touristweathercomparer.viewmodel.ForecastViewModel" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".views.AveragesView">

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:tabPaddingStart="@dimen/tab_item_padding"
            app:tabPaddingEnd="@dimen/tab_item_padding"
            app:tabPaddingBottom="@dimen/tab_item_padding"
            app:tabPaddingTop="@dimen/tab_item_padding"
            app:tabMode="scrollable" />

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />
    </LinearLayout>
</layout>